{
  "name": "github-mcp-server",
  "version": "2.0.0",
  "description": "Enhanced MCP server for GitHub PR analysis with enterprise-grade architecture",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf build",
    "prebuild": "npm run clean && npm run typecheck",
    "health": "node -e \"console.log('Server health check - ensure GITHUB_TOKEN is set')\""
  },
  "keywords": [
    "mcp",
    "github",
    "pr",
    "code-search"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "@octokit/auth-token": "^6.0.0",
    "@octokit/rest": "^22.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18"
  }
}
